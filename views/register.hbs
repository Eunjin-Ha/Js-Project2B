<h1>
  {{title}}
</h1>
<form method="post">

  <label for="username">Username</label>
  <input type="email" id="username" name="username" placeholder="email@email.com" required>

  <label for="password">Password * </label>
  <input type="password" id="password" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">

  <label for="confirm">Confirm * </label>
  <input type="password" id="confirm" name="confirm" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">

  <input type="submit" value="Register">

  <fieldset class="sm-txt">
    Already have an account?
    <a href="/login" title="Login">
      Login
    </a>
  </fieldset>
</form>