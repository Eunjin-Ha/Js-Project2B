<h1>
  {{title}}
</h1>
{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}} 
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}
<form method="post">
  <label for="username">userId *</label>
  <input type="email" id="username" name="username" placeholder="email@email.com" required>

  <label for="password">Password * </label>
  <input type="password" id="password" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}">

  <input type="submit" value="Login">


  <fieldset class="sm-txt">
    Need an account?
    <a href="/register" title="Register">
      Register
    </a>
  </fieldset>
</form>